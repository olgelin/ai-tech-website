# 环境变量配置文件
# 数据库连接字符串
# 注意：实际部署时需要在Vercel环境变量中设置
DATABASE_URL=sqlite:///app.db
# 应用密钥
# 注意：实际部署时需要在Vercel环境变量中设置
SECRET_KEY=
# 服务器端口
PORT=5000
# 调试模式
DEBUG=False
# 数据库类型 (sqlite, mysql, postgresql)
DB_TYPE=sqlite
# MySQL配置 (当DB_TYPE=mysql时使用)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=
# MYSQL_DB=ai_company
# 短信API配置
# SMS_API_KEY=
# SMS_API_SECRET=
